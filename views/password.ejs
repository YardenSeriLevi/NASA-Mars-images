<%- include('includes/head.ejs') %>

<div class="row bg-light ">
    <div class="d-block" id="login">

        <form class="needs-validation" novalidate id="register-form" action="/password" method="post">
            <div class="col-6 offset-3 mb-2 mt-2">
                <label>Password</label>
                <input class="form-control" type="password" name="password" id="password"
                       aria-label="default input example" required >
                <p class="error password-error"></p>
            </div>


            <div class="col-6 offset-3 mb-2 mt-2">
                <label>confirm-password</label>
                <input class="form-control" type="password" name="confirm-password" id="confirm-password"
                       aria-label="default input example" required >
                <p class="error confirm-password-error"></p>
            </div>

            <div class="col-6 offset-3 mb-2 mt-2">
                <button type="submit" class="btn btn-primary">Sign in </button>
                <a href="/register" class="text-decoration-none">back</a>
                <div class="text-center">
                    <h6><span>Already have an account?</span>
                        <a href="/login" class="text-decoration-none">Sign-in</a></h6>
                </div>
            </div>
        </form>
    </div>

</div>


</div>


