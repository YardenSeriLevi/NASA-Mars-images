<%- include('includes/head.ejs') %>
<%let mode%>

<div class="row bg-light ">
    <div class="d-block" id="login">

        <form class="needs-validation" novalidate id="register-form" action="/password" method="post">
            <div class="col-6 offset-3 mb-2 mt-2">
                <p><%error%></p>

                <!--                <label>First Name</label>-->
                <!--                <input class="form-control" type="text" name="firstName" id ="firstName"-->
                <!--                       placeholder="Your first name including letters only"-->
                <!--                       aria-label="default input example" required/>-->
                <!--                <div class="text-danger mt-2"></div>-->
                <div>
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" class="form-control" name="firstName"
                           placeholder="Please enter your first name here"
                           aria-label="default input example" required  value = <%= firstName %> >
                    <div class="text-danger mt-2" id="firstNameError"></div>
                    <p class="error firstName-error"></p>
                </div>
            </div>
            <% if (firstName) { %>
                <% document.querySelector(".error-info").innerText = "register process expired, please try again"%>
            <% } %>

            <div class="col-6 offset-3 mb-2 mt-2">
                <label>Last Name</label>
                <input class="form-control" type="text" name="lastName" id="lastName"
                       placeholder="Your last name including letters only"
                       aria-label="default input example" required value = <%= lastName %>>
                <p class="error lastName-error"></p>
            </div>

            <div class="col-6 offset-3 mb-2 mt-2">
                <label>Email</label>
                <input class="form-control" type="email" name="email" id="email"
                       placeholder="Your email address"
                       aria-label="default input example" required value = <%= email %>>
                <!--                <input class="form-control" type="email" name="email" id="email"-->
                <!--                       placeholder="Your email address"-->
                <!--                       aria-label="default input example" onblur="validateEmail(this.value)" required/>-->
                <p class="error email-error"></p>
            </div>
            <div class="col-6 offset-3 mb-2 mt-2">
                <button type="submit" class="btn btn-primary">submit</button>
                <div class="text-center">
                    <h6><span>Already have an account?</span>
                        <a href="/login" class="text-decoration-none">Sign-in</a></h6>
                </div>
            </div>
        </form>
    </div>

</div>


</div>


<%- include('includes/endPage.ejs') %>





